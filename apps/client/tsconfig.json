{
  "compilerOptions": {
    "target": "es6",
    "module": "ESNext",
    "lib": ["dom", "es2015"],
    "jsx": "react-jsx",
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "types": ["jest", "@testing-library/jest-dom"] 
  },
  "include": ["src", "test"]
}